<!-- Navigation -->
<!-- NOTE: .navbar-default and .navbar-inverse are both supported with this theme. -->
<nav class="navbar navbar-inverse navbar-fixed-top navbar-expanded">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <i class="fa fa-bars"></i> Menu
            </button>
            <% if !current_page?("/") %>
                <%= link_to image_tag("people_white.svg", alt: "Logo", class: "img-responsive"),   root_path, class: "navbar-brand page-scroll"  %>
            <% else %>
                <%= link_to image_tag("people_white.svg", alt: "Logo", class: "img-responsive"),   "#page-top", class: "navbar-brand page-scroll"  %>
            <% end %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a class="page-scroll" href="#page-top"></a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#headup" : "href=/#headup" %> >Head Up</a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#services" : "href=/#services" %> >Services</a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#process" : "href=/#process" %> >Process</a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#portfolio" : "href=/#portfolio" %> >Portfolio</a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#testimonials" : "href=/#testimonials" %> >Testimonials</a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#contact" : "href=/#contact" %> >Contact</a>
                </li>
                <li>
                    <a class="page-scroll" <%= current_page?("/") ? "href=#blog" : "href=/#blog" %> >Blog</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<%= if !current_page?("/")
        javascript_tag "document.getElementsByClassName('navbar-fixed-top')[0].className = 'navbar navbar-inverse navbar-fixed-top';"
    end %>

